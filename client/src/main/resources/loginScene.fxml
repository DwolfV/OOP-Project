<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane styleClass="primary-pane" xmlns:fx="http://javafx.com/fxml/1" prefHeight="480.0" prefWidth="760.0"
            stylesheets="@/loginstyle.css" xmlns="http://javafx.com/javafx/8"
            fx:controller="nl.tudelft.oopp.demo.controllers.MainSceneController">
    <AnchorPane styleClass="secondary-pane" layoutX="360.0" layoutY="73.0" prefHeight="334.0" prefWidth="326.0">
        <TextField styleClass="input-field" fx:id="usernameField" layoutX="47.0" layoutY="102.0" prefHeight="31.0" prefWidth="233.0"
                   promptText="Username"/>
        <PasswordField styleClass="input-field" fx:id="passwordField" layoutX="47.0" layoutY="141.0" prefHeight="31.0" prefWidth="233.0"
                       promptText="Password"/>
        <Button styleClass="login-button" layoutX="47.0" layoutY="192.0" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="31.0"
                prefWidth="233.0" text="Log in"/>
        <Text fill="WHITE" layoutX="104.0" layoutY="66.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign In">
            <font>
                <Font name="Verdana" size="36.0"/>
            </font>
        </Text>
        <Hyperlink layoutX="104.0" layoutY="228.0" text="Forgot Password?"/>
        <Button styleClass="login-button" layoutX="47.0" layoutY="275.0" mnemonicParsing="false" onAction="#handleSignUpClick" prefHeight="31.0"
                prefWidth="233.0" text="Sign up"/>
    </AnchorPane>
    <ImageView fitHeight="154.0" fitWidth="299.0" layoutX="22.0" layoutY="117.0" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@TU_Delft_logo_White.png"/>
    </ImageView>
    <Label layoutX="71.0" layoutY="255.0" prefHeight="63.0" prefWidth="201.0"
           text="Welcome to TU Delft Room Reservations" textAlignment="CENTER" textFill="WHITE" wrapText="true">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Label fx:id="closeButton" alignment="CENTER" layoutX="731.0" layoutY="4.0"
           onMouseClicked="#handleCloseButtonAction"
           prefHeight="35.0" prefWidth="23.0" style="-fx-font-weight: bold; -fx-font-size: 24;" text="X"
           textFill="WHITE">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
</AnchorPane>
