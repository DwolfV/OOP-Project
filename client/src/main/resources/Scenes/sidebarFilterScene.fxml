<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxWidth="200.0" prefWidth="200.0" styleClass="empty-side-pane" stylesheets="@/Styles/mainstyle.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.demo.controllers.SidebarSceneController">

    <VBox prefWidth="200.0" styleClass="filter-vbox">
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Date: ">
            <VBox.margin>
                <Insets left="10.0" top="10.0" />
            </VBox.margin>
        </Text>
        <DatePicker fx:id="dp" onAction="#onPickDate">
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin>
        </DatePicker>
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Capacity:">
            <VBox.margin>
                <Insets left="10.0" top="10.0" />
            </VBox.margin>
        </Text>
        <TextField fx:id="capacityId">
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin>
        </TextField>
      <Separator prefHeight="20.0" prefWidth="180.0" />
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Facilities:">
            <VBox.margin>
                <Insets left="10.0" top="10.0" />
            </VBox.margin>
        </Text>
        <CheckBox fx:id="whiteboardId" mnemonicParsing="false" text="Whiteboard" textFill="WHITE">
            <padding>
                <Insets left="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </CheckBox>
        <CheckBox fx:id="tableId" mnemonicParsing="false" text="Table" textFill="WHITE">
            <padding>
                <Insets left="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </CheckBox>
        <CheckBox fx:id="tvId" mnemonicParsing="false" text="TV" textFill="WHITE">
            <padding>
                <Insets left="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </CheckBox>
        <CheckBox fx:id="projectorId" mnemonicParsing="false" text="Projector" textFill="WHITE">
            <padding>
                <Insets left="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </CheckBox>
        <CheckBox fx:id="chairsId" mnemonicParsing="false" text="Chairs" textFill="WHITE">
            <padding>
                <Insets left="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </CheckBox>
      <Separator prefHeight="20.0" prefWidth="180.0" />
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 20px;" text="Restaurants:">
            <VBox.margin>
                <Insets left="10.0" right="5.0" top="10.0" />
            </VBox.margin>
        </Text>
        <CheckBox mnemonicParsing="false" text="Delivery" textFill="WHITE">
            <padding>
                <Insets bottom="5.0" left="10.0" />
            </padding>
        </CheckBox>
        <CheckBox mnemonicParsing="false" text="Take Away" textFill="WHITE">
            <padding>
                <Insets left="10.0" />
            </padding>
        </CheckBox>
      <Separator prefHeight="22.0" prefWidth="180.0" />
        
        <Button fx:id="searchId" mnemonicParsing="false" prefHeight="30.0" prefWidth="180.0" styleClass="search-button" text="Search">
        </Button>
    </VBox>
</AnchorPane>
